<!--pages/downloadpage/download_record.wxml-->
<view>

  <view class='main'>
    <block wx:for="{{showrecordList}}" wx:key="item">
      <view class='container'>

        <view class='item-list'
        bindtap='detail'
        data-lwid='{{item.lwid}}'
        data-yhid='{{item.yhid}}'>
          <p class='time'>{{item.downDate}}</p>
          <p class='title'>{{item.title}}</p>
        </view>
        <view bindtap='delete_paper'
        data-lwid='{{item.lwid}}'>
          <image class='del-img' src='/pages/img/删除.png '></image>
        </view>
      </view>
    </block>
  </view>
  <view class='button_style'>
    <button class='clean'>清空记录</button>
  </view>

</view>